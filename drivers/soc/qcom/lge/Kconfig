menu "LGE Specific Patches"

config LGE_HANDLE_PANIC
	tristate "Support LGE Crash Handler"
	default n
	depends on MACH_LGE
	help
	  LGE Crash Handler

config LGE_HALL_IC
  bool "LGE HALL IC"
	depends on MACH_LGE
	help
	  Support sending a device-tree defined gpio code when hall IC is triggered

config LGE_ACC_NT
	tristate "Support NT accessory"
	depends on MACH_LGE
	default n
	help
	  Say Y here to enable pseudo mode setting

config LGE_PANEL_MAKER_ID_SUPPORT
	tristate "Support pseudo battery mode"
	depends on MACH_LGE
	default n
	help
	  Say Y here to enable Panel Maker ID feature setting

config LGE_PM_LGE_POWER_CORE
	bool "Apply LGE Power Core"
	depends on LGE_PM
	default n
	help
	  Say Y here enable support lge power core

config LGE_PM_LGE_POWER_CLASS_BATTERY_ID_CHECKER
	tristate "Battery ID checker driver for LG Power Class"
	depends on LGE_PM_LGE_POWER_CORE
	default n
	help
	  Say Y here enable support battery id checker driver for LG Power Class

config LGE_PM_EMBEDDED_BATTERY
	bool "embedded battery"
	depends on LGE_PM
	default n
	help
		Enable embedded battery

config LGE_DISABLE_SECOND_SCREEN
	bool "Disable the secondary screen on elsa devices"
	depends on MACH_MSM8996_ELSA
	help
	   Disables the second screen for devices with userspace which lacks
	   support.  Notably this includes all non-stock versions of Android
	   for LGE devices at the time of this writing (progress is being
	   made for other Android versions though).

endmenu
